@model RE.Models.Entities.Product
@{
    ViewBag.Title = Model.ProductName;
}

<h2>@Model.ProductName Ürün Düzenleme</h2>

<div class="row">
    <div class="col-md-offset-2 col-md-8">
        <div class="text-danger">
            @Html.ValidationSummary()
        </div>
        @using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.ProductID)

            if (string.IsNullOrEmpty(Model.FotoUrl))
            {
                <div class="col-sm-offset-2 col-sm-10">
                    <img src="~/Uploads/nofoto.png" class="img-rounded" width="200" height="200" />
                </div>
                <br />
            }
            else
            {
                <div class="col-sm-offset-2 col-sm-10">
                    <img src="@Model.FotoUrl" class="img-rounded" width="200" height="200" />
                </div>
                <br />
            }
            <div class="form-group">
                @Html.LabelFor(x => x.ProductName, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
                    <span class="text-danger">@Html.ValidationMessageFor(x => x.ProductName)</span>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.UnitPrice, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.UnitPrice, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.FotoUrl, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Foto, new { @class = "form-control", type = "file", multiple = false })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" class="btn btn-default" value="Güncelle" />
                    <input type="reset" class="btn btn-warning" value="Formu Temizle" />
                </div>
            </div>
        }
    </div>
</div>