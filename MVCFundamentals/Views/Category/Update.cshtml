@model MVCFundamentals.Models.Category
@{
    ViewBag.Title = "Update";
}

<h2>@Model.CategoryName Düzenleme Ekranı</h2>

<div class="row">
    <div class="col-md-offset-2 col-md-8">
        <div class="text-danger">
            @Html.ValidationSummary()
        </div>
        @using (Html.BeginForm("Update", "Category", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.CategoryID)
            <div class="form-group">
                @Html.LabelFor(x => x.CategoryName, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control", placeholder = "Kategori Adı" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Description, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Description, new { @class = "form-control", placeholder = "Açıklama" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" class="btn btn-default" value="Güncelle" />
                    <input type="reset" class="btn btn-warning" value="Formu Temizle" />
                </div>
            </div>
        }
    </div>
</div>