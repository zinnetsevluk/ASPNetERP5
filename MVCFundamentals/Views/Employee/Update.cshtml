@model MVCFundamentals.Models.Employee
@{
    ViewBag.Title = "Update";
}

<h2>Çalışan Güncelleme Sayfası</h2>

<div class="row">
    <div class="col-md-offset-2 col-md-8">
        <div class="text-danger">
            @Html.ValidationSummary()
        </div>
        @using (Html.BeginForm("Update", "Employee", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x=>x.EmployeeID);
            <div class="form-group">
                @Html.LabelFor(x => x.FirstName, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", placeholder = "Ad" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.LastName, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", placeholder = "Soyad" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Title, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control", placeholder = "İş Ünvanı" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.ReportsTo, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.DropDownListFor(x => x.ReportsTo, (List<SelectListItem>)ViewBag.calisanlarList, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" class="btn btn-default" value="Güncelle" />
                    <input type="reset" class="btn btn-warning" value="Formu Temizle" />
                </div>
            </div>
        }
    </div>
</div>